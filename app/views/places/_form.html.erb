<div class="form-block">
<%= form_for @place, html: { multipart: true }, class: "form-horizontal" do |f| %> 
  
  <div class="form-group row">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :category, class: "col-sm-2 control-label" %>
    <%= f.collection_select :category_id, Category.all, :id, :title, class: "form-select from-control" %>
  </div>
  <div class="form-group row">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :image, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">    
      <%= f.file_field :image, class: "form-control" %>     
    </div>
  </div> 
  <div class="form-group row">
    <label for="place_agree" class="col-sm-2 control-label control-label-sm">Отправка данной формы означает Ваше согласие на публикацию данной информации на нашем сайте</label>
    <div class="col-sm-6">    
      <%= f.check_box :agree %>     
    </div>
  </div> 
  <%= f.hidden_field :user_id, value: current_user.id %>
  
  <div class="form-group move-right col-sm-offset-2">
    <%= f.submit "Добавить", class: "btn btn-primary" %>
  </div>
<% end %>
</div>